<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SettingsFragment">

    <Switch
        android:id="@+id/dark_switch"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        android:text="Dark" />

    <EditText
        android:id="@+id/app_specific_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="text to save in app specific storage" />

    <EditText
        android:id="@+id/shared_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="text to save in shared storage" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/VioletCheckButton"
        android:id="@+id/nuke_database_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_database">
    </androidx.appcompat.widget.AppCompatButton>

</LinearLayout>